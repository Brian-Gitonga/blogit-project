generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlserver"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @map("Id") @default(uuid())
  firstName String @map("FirstName")
  lastName String @map("LastName")
  emailAddress String @map("EmailAddress") @unique
  username String @map("Username") @unique
  password String @map("Password")
  isDeleted Boolean @map("IsDeleted") @default(false)
  dateJoined DateTime @map("DateJoined") @default(now())
  lastUpdated DateTime @map("LastUpdated") @updatedAt
  blogs Blog[]

  @@map("Users")
}

model Blog {
  id String @id @map("Id") @default(uuid())
  title String @map("Title")
  synopsis String @map("Synopsis")
  featuredImageUrl String? @map("FeaturedImageUrl")
  content String @map("Content")
  isDeleted Boolean @map("IsDeleted") @default(false)
  createdAt DateTime @map("CreatedAt") @default(now())
  lastUpdated DateTime @map("LastUpdated") @updatedAt
  user User @relation(fields: [userId], references: [id])
  userId String @map("UserId")

  @@map("Blogs")
}
